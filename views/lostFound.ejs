<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lost & Found | Loop</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style/index.css">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .hero {
      background: linear-gradient(135deg, rgba(52, 91, 218, 0.7), rgba(51, 52, 53, 0.7)),
        url('../Public/assets/photo3.jpg') center/cover no-repeat;
      color: white;
      text-align: center;
      padding: 4rem 1rem;
      margin-bottom: 2rem;
    }

    .item-card {
      background: white;
      border-radius: 8px;
      padding: 1rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .item-card:hover {
      transform: translateY(-5px);
    }

    .badge-filter {
      cursor: pointer;
    }

    .badge-filter.active {
      background-color: #0d6efd !important;
      color: white;
    }
  </style>
</head>

<body>

  <%- include('partials/nav') %>

  <!-- Hero Section -->
  <div class="hero">
    <h1 class="display-4 fw-bold">Lost it? Loop it back.</h1>
    <button class="btn btn-light fw-semibold mt-3" data-bs-toggle="modal" data-bs-target="#reportModal">
      âž• Report Lost/Found Item
    </button>
  </div>

  <div class="container">

    <!-- Search & Filter -->
    <div class="row mb-4">
      <div class="col-md-8 mb-2">
        <input type="text" id="searchInput" class="form-control form-control-lg" placeholder="Search items...">
      </div>
      <div class="col-md-4 mb-2">
        <div id="filterBadges">
          <span class="badge bg-secondary badge-filter active" data-filter="all">All</span>
          <span class="badge bg-secondary badge-filter" data-filter="lost">Lost</span>
          <span class="badge bg-secondary badge-filter" data-filter="found">Found</span>
        </div>
      </div>
    </div>

    <!-- Items Grid -->
    <div class="row" id="itemsGrid"></div>
    <div id="noItems" class="text-center text-muted my-5" style="display:none;">
      <h3>No items found</h3>
      <p>Try adjusting your search or filter criteria.</p>
    </div>

  </div>

  <!-- Modal for Reporting Item -->
  <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="reportForm" enctype="multipart/form-data">
          <div class="modal-header">
            <h5 class="modal-title" id="reportModalLabel">Report Lost/Found Item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Item Type</label>
              <select class="form-select" name="type" required>
                <option value="Lost">Lost</option>
                <option value="Found">Found</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Category</label>
              <select name="category" class="form-select" required>
                <option value="" selected disabled>Select category</option>
                <option value="Electronics">Electronics</option>
                <option value="Bags & Backpacks">Bags & Backpacks</option>
                <option value="Books & Stationery">Books & Stationery</option>
                <option value="Clothing & Accessories">Clothing & Accessories</option>
                <option value="Keys & Keychains">Keys & Keychains</option>
                <option value="Sports Equipment">Sports Equipment</option>
                <option value="Jewelry & Watches">Jewelry & Watches</option>
                <option value="Personal Items">Personal Items</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" class="form-control" name="title" placeholder="Item name" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="description" rows="3" required></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Location</label>
              <input type="text" class="form-control" name="location" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Date</label>
              <input type="date" class="form-control" name="date" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Contact</label>
              <input type="text" class="form-control" name="contact" placeholder="Email or phone" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit Report</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const itemsGrid = document.getElementById("itemsGrid");
    const searchInput = document.getElementById("searchInput");
    const badges = document.querySelectorAll(".badge-filter");
    const reportForm = document.getElementById("reportForm");
    const noItems = document.getElementById("noItems");

    // ðŸ”¹ Get logged-in user's email from EJS session
    const currentUserEmail = "<%= user ? user.email : '' %>";

    let activeFilter = "all";

    async function loadItems() {
      try {
        const res = await fetch("/lostfound/getItem");
        const items = await res.json();
        renderItems(items);
      } catch (err) {
        console.error("Failed to load items", err);
      }
    }

    function renderItems(items) {
      const search = searchInput.value.toLowerCase();
      const filtered = items.filter(item => {
        const matchesFilter = activeFilter === "all" || item.type.toLowerCase() === activeFilter;
        const matchesSearch =
          item.title.toLowerCase().includes(search) ||
          item.description.toLowerCase().includes(search) ||
          item.category.toLowerCase().includes(search) ||
          item.location.toLowerCase().includes(search);
        return matchesFilter && matchesSearch;
      });

      itemsGrid.innerHTML = "";
      noItems.style.display = filtered.length ? "none" : "block";

      filtered.forEach(item => {
        const isOwner = item.reportedBy === currentUserEmail;
        const col = document.createElement("div");
        col.className = "col-md-4 mb-4";
        col.innerHTML = `
          <div class="item-card p-3">
            <div class="mb-2">
              <span class="badge ${item.type === 'Lost' ? 'bg-danger' : 'bg-success'} me-1">${item.type}</span>
              <span class="badge bg-secondary">${item.category}</span>
            </div>
            <h5 class="fw-bold">${item.title}</h5>
            <p>${item.description}</p>
            <p>
              <strong>Location:</strong> ${item.location}<br>
              <strong>Date:</strong> ${new Date(item.date).toLocaleDateString()}<br>
              <strong>Contact:</strong> ${item.contact}
            </p>
            ${
              isOwner
                ? `<button class="btn btn-sm btn-danger w-100" onclick="deleteItem('${item._id}')">ðŸ—‘ Delete</button>`
                : `<button class="btn btn-sm btn-primary w-100" onclick="alert('Contact: ${item.contact}')">Contact</button>`
            }
          </div>
        `;
        itemsGrid.appendChild(col);
      });
    }

    // ðŸ”¹ Delete post
    async function deleteItem(id) {
      if (!confirm("Are you sure you want to delete this post?")) return;
      try {
        const res = await fetch(`/lostfound/${id}`, {
          method: "DELETE",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ reportedBy: currentUserEmail })
        });
        const data = await res.json();
        if (res.ok) {
          alert("Post deleted successfully");
          loadItems();
        } else {
          alert(data.error || "Failed to delete post");
        }
      } catch (err) {
        console.error("Delete failed:", err);
        alert("Error deleting post");
      }
    }

    // ðŸ”¹ Search & Filter
    searchInput.addEventListener("input", loadItems);
    badges.forEach(badge => {
      badge.addEventListener("click", () => {
        badges.forEach(b => b.classList.remove("active"));
        badge.classList.add("active");
        activeFilter = badge.dataset.filter;
        loadItems();
      });
    });

    // ðŸ”¹ Submit new report
    reportForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(reportForm);
      formData.append("reportedBy", currentUserEmail);

      try {
        const res = await fetch("/lostfound/report", { method: "POST", body: formData });
        if (res.ok) {
          reportForm.reset();
          bootstrap.Modal.getInstance(document.getElementById('reportModal')).hide();
          loadItems();
        } else {
          alert("Failed to report item");
        }
      } catch (err) {
        console.error(err);
        alert("Failed to report item");
      }
    });

    // Initial load
    loadItems();
  </script>
</body>
</html>
