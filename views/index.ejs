                                <i class="bi bi-chat-dots-fill fs-1 text-success"></i>
                            </div>

                            <!-- Text content -->
                            <div>
                                <h5 class="card-title fw-bold mb-1">Smart Matching</h5>
                                <span class="card-text text-muted mb-0">
